{
  "compilerOptions": {
    "target": "ES3",
    "module": "ES6",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "declaration": true,
    "declarationDir":  "./types/",
    "outDir": "./lib/",
    "types": [
      "node"
    ],
    "lib": [
      "es2015",
      "dom",
      "dom.iterable",
      "scripthost",
      "es2016",
      "es2017"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
