{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "declaration": true,
    "outDir": "../lib-ts/",
    "declarationDir":  "../types/",
    "types": [
      "node"
    ],
    "lib": [
      "es2015",
      "dom",
      "dom.iterable",
      "scripthost",
      "es2016",
      "es2017"
    ]
  },
  "include": [
    "../src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
